
ARMGNU = /Applications/ti/ccsv6/tools/compiler/gcc-arm-none-eabi-4_9-2015q3/bin/arm-none-eabi

AOPS = --warn --fatal-warnings -mcpu=cortex-m4
COPS = -Wall -Werror -O2 -nostdlib -nostartfiles -ffreestanding  -mcpu=cortex-m4

LOPS = -Wall -m32 -emit-llvm -target arm-none-eabi -mcpu=cortex-m4 -mthumb
LLCOPS = -march=thumb -mcpu=cortex-m4
#LLCOPS = -mcpu=cortex-m0
COPS = -Wall  -O2 -nostdlib -nostartfiles -ffreestanding
OOPS = -std-compile-opts

gcc : flash01.gcc.thumb.sram.bin

all : gcc clang

clang : flash01.clang.thumb.norm.flash.bin flash01.clang.thumb.opt.flash.bin flash01.clang.thumb.norm.sram.bin flash01.clang.thumb.opt.sram.bin 

clean:
	rm -f *.bin
	rm -f *.o
	rm -f *.elf
	rm -f *.list
	rm -f *.bc
	rm -f *.opt.s
	rm -f *.norm.s

#---------------------------------

flash.o : flash.s
	$(ARMGNU)-as $(AOPS) flash.s -o flash.o

sram.o : sram.s
	$(ARMGNU)-as $(AOPS) sram.s -o sram.o

flash01.gcc.thumb.o : flash01.c
	$(ARMGNU)-gcc $(COPS) -mthumb -c flash01.c -o flash01.gcc.thumb.o

flash01.gcc.thumb.flash.bin : flash.ld flash.o flash01.gcc.thumb.o
	$(ARMGNU)-ld -o flash01.gcc.thumb.flash.elf -T flash.ld flash.o flash01.gcc.thumb.o
	$(ARMGNU)-objdump -D flash01.gcc.thumb.flash.elf > flash01.gcc.thumb.flash.list
	$(ARMGNU)-objcopy flash01.gcc.thumb.flash.elf flash01.gcc.thumb.flash.bin -O binary

flash01.gcc.thumb.sram.bin : sram.ld sram.o flash01.gcc.thumb.o
	$(ARMGNU)-ld -o flash01.gcc.thumb.sram.elf -T sram.ld sram.o flash01.gcc.thumb.o
	$(ARMGNU)-objdump -D flash01.gcc.thumb.sram.elf > flash01.gcc.thumb.sram.list
	$(ARMGNU)-objcopy flash01.gcc.thumb.sram.elf flash01.gcc.thumb.sram.bin -O binary

#---------------------------------

flash01.clang.bc : flash01.c
	clang $(LOPS) -c flash01.c -o flash01.clang.bc

flash01.clang.thumb.norm.flash.bin : flash.ld flash.o flash01.clang.bc
	#llc $(LLCOPS) flash01.clang.bc -o flash01.clang.thumb.norm.s
	#$(ARMGNU)-as $(AOPS) flash01.clang.thumb.norm.s -o flash01.clang.thumb.norm.o
	llc $(LLCOPS) flash01.clang.bc -filetype=obj -o flash01.clang.thumb.norm.o
	$(ARMGNU)-ld -o flash01.clang.thumb.norm.flash.elf -T flash.ld flash.o flash01.clang.thumb.norm.o
	$(ARMGNU)-objdump -D flash01.clang.thumb.norm.flash.elf > flash01.clang.thumb.norm.flash.list
	$(ARMGNU)-objcopy flash01.clang.thumb.norm.flash.elf flash01.clang.thumb.norm.flash.bin -O binary

flash01.clang.thumb.opt.flash.bin : flash.ld flash.o flash01.clang.bc
	opt $(OOPS) flash01.clang.bc -o flash01.clang.thumb.opt.bc
	#llc $(LLCOPS) flash01.clang.thumb.opt.bc -o flash01.clang.thumb.opt.s
	#$(ARMGNU)-as $(AOPS) flash01.clang.thumb.opt.s -o flash01.clang.thumb.opt.o
	llc $(LLCOPS) flash01.clang.thumb.opt.bc -filetype=obj -o flash01.clang.thumb.opt.o
	$(ARMGNU)-ld -o flash01.clang.thumb.opt.flash.elf -T flash.ld flash.o flash01.clang.thumb.opt.o
	$(ARMGNU)-objdump -D flash01.clang.thumb.opt.flash.elf > flash01.clang.thumb.opt.flash.list
	$(ARMGNU)-objcopy flash01.clang.thumb.opt.flash.elf flash01.clang.thumb.opt.flash.bin -O binary


flash01.clang.thumb.norm.sram.bin : sram.ld sram.o flash01.clang.bc
	#llc $(LLCOPS) flash01.clang.bc -o flash01.clang.thumb.norm.s
	#$(ARMGNU)-as $(AOPS) flash01.clang.thumb.norm.s -o flash01.clang.thumb.norm.o
	llc $(LLCOPS) flash01.clang.bc -filetype=obj -o flash01.clang.thumb.norm.o
	$(ARMGNU)-ld -o flash01.clang.thumb.norm.sram.elf -T sram.ld sram.o flash01.clang.thumb.norm.o
	$(ARMGNU)-objdump -D flash01.clang.thumb.norm.sram.elf > flash01.clang.thumb.norm.sram.list
	$(ARMGNU)-objcopy flash01.clang.thumb.norm.sram.elf flash01.clang.thumb.norm.sram.bin -O binary

flash01.clang.thumb.opt.sram.bin : sram.ld sram.o flash01.clang.bc
	opt $(OOPS) flash01.clang.bc -o flash01.clang.thumb.opt.bc
	#llc $(LLCOPS) flash01.clang.thumb.opt.bc -o flash01.clang.thumb.opt.s
	#$(ARMGNU)-as $(AOPS) flash01.clang.thumb.opt.s -o flash01.clang.thumb.opt.o
	llc $(LLCOPS) flash01.clang.thumb.opt.bc -filetype=obj -o flash01.clang.thumb.opt.o
	$(ARMGNU)-ld -o flash01.clang.thumb.opt.sram.elf -T sram.ld sram.o flash01.clang.thumb.opt.o
	$(ARMGNU)-objdump -D flash01.clang.thumb.opt.sram.elf > flash01.clang.thumb.opt.sram.list
	$(ARMGNU)-objcopy flash01.clang.thumb.opt.sram.elf flash01.clang.thumb.opt.sram.bin -O binary




